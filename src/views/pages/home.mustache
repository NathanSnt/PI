{{>partials/header}}

<div id="conteudo">

    {{#toast}}
        {{^sucesso}}
        <div class="alerta falha">
            <p>{{toast}}</p>
        </div>
        {{/sucesso}}

        {{#sucesso}}
        <div class="alerta sucesso">
            <p>{{toast}}</p>
        </div>
    {{/sucesso}}
    {{/toast}}

        <div id="status">
            <div id="imagem">
                <img src="/images/triste.png" alt="">
            </div>
            <div id="statush1">
                <h1>Status da linha: Ruim.</h1>
            </div>
        </div>
        <div id="informacoes">

            {{#comentarios}}
            {{#comentarios.length}}
            <div id="comentario">
                <img src="/images/users/{{foto_perfil}}" alt="foto de perfil" id="foto-perfil" onclick="mudarConteudo('usuario/{{cod_usuario}}', '#conteudo', 'noticia')">
                <div id="caixa-comentario">
                    <div class="tags">
                        <div class="tag">{{tipo}}</div>
                        {{#estacao}}
                        <div class="tag">{{estacao}}</div>
                        {{/estacao}}
                        {{#carro}}
                        <div class="tag">{{carro}}</div>
                        {{/carro}}
                    </div>
                    <p>
                        {{descricao}}
                    </p>
                    <div id="comentario-footer">
                        <div id="nome-usuario">
                            <p>{{usuario}}</p>
                        </div>
                        <div id="data-post">
                            <p>{{tempo}}</p>
                        </div>
                        <div id="denunciar">
                            <p><a href="/denunciar/{{codigo}}">Denunciar coment√°rio</a></p>
                        </div>
                        <div id="botoes">
                            <img id="bom" src="/images/green-face.svg" alt="">
                            <img id="neutro" src="/images/yellow-face.svg" alt="">
                            <img id="ruim" src="/images/red-face.svg" alt="">
                        </div>
                    </div>
                </div>
                <img id="exclamation" src="/images/exclamation.svg" alt="" style="display: none;"
                    onclick="mostrarInfo(this)">
            </div>



            {{/comentarios.length}}
            {{/comentarios}}

        </div>
</div>
</div>

