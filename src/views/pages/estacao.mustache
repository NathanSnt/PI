            </div>
    
            {{#comentarios}}
            {{#comentarios.length}}
            
            <div id="comentario">
                <img src="/images/users/{{foto_perfil}}" alt="foto de perfil" id="foto-perfil">
                <div id="caixa-comentario">
                    <p>
                        {{descricao}}
                    </p>
                    <div id="comentario-footer">
                        <div id="nome-usuario">
                            <p>{{usuario}}</p>
                        </div>
                        <div id="data-post">
                            <p>{{tempo}}</p>
                        </div>
                        <div id="denunciar">
                            <p><a href="#">Denunciar comentário</a></p>
                        </div>
                        <div id="botoes">
                            <img id="bom" src="/images/green-face.svg" alt="">
                            <img id="neutro" src="/images/yellow-face.svg" alt="">
                            <img id="ruim" src="/images/red-face.svg" alt="">
                        </div>
                    </div>
                </div>
                <img id="exclamation" src="/images/exclamation.svg" alt="" style="display: none;"
                    onclick="mostrarInfo(this)">
            </div>
            
            
            
            {{/comentarios.length}}
            {{/comentarios}}
        </div>
    </div>
</div>
</div>
</div>
<script>
    window.addEventListener('load', () => {
        mudarCarrossel('{{estacao.nome}}'.replace(/ /g, "_"))
    })
</script>
